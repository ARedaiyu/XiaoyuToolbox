<UserControl
    x:Class="XiaoyuToolbox.Views.RandomTool.RandomPasswordView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:XiaoyuToolbox.Views.RandomTool"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="{StaticResource ViewBackground}"
    FontSize="{StaticResource ViewFontSize}"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:RandomPasswordViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Thickness x:Key="MarginA1">5</Thickness>

        <Style TargetType="CheckBox">
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="{StaticResource MarginA1}" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="{StaticResource MarginA1}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="{StaticResource MarginA1}" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="100" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="{StaticResource Margin1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="{StaticResource MarginA1}" />
                    <Setter Property="Height" Value="28" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                </Style>
            </StackPanel.Resources>

            <StackPanel Orientation="Horizontal">
                <CheckBox Content="大写字母（A-Z）" IsChecked="{Binding UppercasesIncluded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <CheckBox Content="小写字母（a-z）" IsChecked="{Binding LowercasesIncluded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <CheckBox Content="数字（0-9）" IsChecked="{Binding NumbersIncluded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <CheckBox Content="特殊字符" IsChecked="{Binding SpecialCharactersIncluded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox Grid.Column="1" Text="{Binding SpecialCharacters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <CheckBox
                    Grid.Row="1"
                    Content="排除字符"
                    IsChecked="{Binding HasExclusion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding ExclusionCharacters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="2" Text="密码长度" />

                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="{Binding PasswordLengthText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3" Text="生成数量" />

                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Text="{Binding PasswordNumberText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding GenerateCommand}" Content="生成密码" />
                <Button Command="{Binding ExportCommand}" Content="导出结果" />
                <Button Command="{Binding ClearCommand}" Content="清除" />
            </StackPanel>
        </StackPanel>

        <TextBox
            Grid.Row="1"
            Margin="{StaticResource MarginA1}"
            AcceptsReturn="True"
            IsReadOnly="True"
            Text="{Binding Passwords, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>
